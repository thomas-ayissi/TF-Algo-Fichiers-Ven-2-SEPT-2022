Algorithme DemoRef
    Variable nbr : Entier
DEBUT

    nbr <- 0;
    inc(nbr);
    Ecrire(nbr); // 1

FIN


PROCEDURE inc( ref a: Entier )
DEBUT
    a <- a + 1
FIN
