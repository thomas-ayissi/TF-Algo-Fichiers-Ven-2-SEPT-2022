Algorithme Moyenne
    Variable notes : Tableau[5] de Entier
    Variable cpt : Entier
    Variable moyenne : Reel
DEBUT


    cpt <- 0
    moyenne <- 0

    TANTQUE cpt < 5 FAIRE
        
        Lire( notes[cpt] )
        moyenne <- moyenne + notes[cpt]
        cpt <- cpt + 1

    FINTQ

    Ecrire( moyenne / 5 )
    

FIN